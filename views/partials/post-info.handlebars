<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        <p>{{post_content}}</p>
    </div>
    <div class="meta">
        By <a href="github.com/{{user.github}}">{{user.username}}</a> on {{format_date created_at}}
        |
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>